<?xml version="1.0" encoding="utf-8"?>
<RadioGroup
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@id/radio_group_account_type"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:checkedButton="@id/radio_button_customer"
    tools:showIn="@layout/fragment_login">

    <RadioButton
        android:id="@id/radio_button_customer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:text="@string/customer"
        android:textStyle="bold"
        android:textColor="@color/steel_blue_500"
        android:background="@drawable/basic_border"
        android:layout_marginRight="@dimen/small_margin"
        android:layout_marginEnd="@dimen/small_margin"
        />

    <RadioButton
        android:id="@id/radio_button_merchant"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:text="@string/merchant"
        android:textStyle="bold"
        android:textColor="@color/steel_blue_500"
        android:background="@drawable/basic_border"
        android:layout_marginLeft="@dimen/small_margin"
        android:layout_marginStart="@dimen/small_margin"
        />

</RadioGroup>

