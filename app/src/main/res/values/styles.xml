<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MyBasicEditText" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/medium_padding</item>
        <item name="android:background">@drawable/edit_text_basic_bg</item>
        <item name="android:layout_marginTop">@dimen/medium_margin</item>
        <item name="android:layout_marginLeft">@dimen/medium_margin</item>
        <item name="android:layout_marginRight">@dimen/medium_margin</item>
    </style>

    <style name="MyBasicEditTextError">
        <item name="android:visibility">gone</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/red</item>
        <item name="android:textSize">@dimen/medium_text</item>
        <item name="android:paddingTop">@dimen/small_padding</item>
        <item name="android:layout_marginLeft">@dimen/medium_margin</item>
        <item name="android:layout_marginRight">@dimen/medium_margin</item>
    </style>

    <style name="MyBasicSpinner">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/medium_padding</item>
        <item name="android:layout_marginTop">@dimen/medium_margin</item>
        <item name="android:layout_marginRight">@dimen/medium_margin</item>
        <item name="android:layout_marginLeft">@dimen/medium_margin</item>
        <item name="android:background">@drawable/edit_text_basic_bg</item>
    </style>

    <style name="MyBasicWhiteButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/forgot_password</item>
        <item name="android:textColor">@color/steel_blue_200</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_marginTop">@dimen/xlarge_margin</item>
        <item name="android:layout_marginLeft">@dimen/medium_margin</item>
        <item name="android:layout_marginRight">@dimen/medium_margin</item>
        <item name="android:background">@color/white</item>
        <item name="backgroundTint">@null</item>
    </style>

    <style name="MyBasicWhiteButton.MyBasicButton" >
        <item name="android:textColor">@color/button_basic_text</item>
        <item name="android:textSize">@dimen/large_text</item>
        <item name="android:padding">@dimen/small_padding</item>
        <item name="android:background">@drawable/button_basic_bg</item>
        <item name="android:layout_marginTop">@dimen/medium_margin</item>
    </style>

    <style name="MyAccountTypeRadioButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/large_margin</item>
        <item name="android:layout_marginLeft">@dimen/medium_margin</item>
        <item name="android:layout_marginRight">@dimen/medium_margin</item>
    </style>

    <style name="MyDrawerNavigationItems">
        <item name="android:textSize">@dimen/medium_text</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MyDrawerNavigationTheme">
        <item name="android:layout_marginTop">@dimen/medium_margin</item>
        <item name="android:layout_marginBottom">@dimen/medium_margin</item>
    </style>

    <style name="MyOurServiceButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:visibility">gone</item>
        <item name="android:textColor">@color/button_basic_text</item>
        <item name="android:background">@drawable/button_basic_bg</item>
        <item name="android:layout_marginTop">@dimen/large_margin</item>
        <item name="backgroundTint">@null</item>
    </style>

    <style name="MyProfileDataLabel">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:visibility">gone</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/medium_text</item>
        <item name="android:textColor">@color/steel_blue_500</item>
        <item name="android:layout_marginTop">@dimen/large_margin</item>
    </style>

    <style name="MyProfileDataSubLabel">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:visibility">gone</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/medium_text</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginTop">@dimen/small_margin</item>
    </style>

    <style name="MyProfileData">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:visibility">gone</item>
        <item name="android:textSize">@dimen/medium_text</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="MyProfileDataEditButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:visibility">gone</item>
        <item name="android:src">@drawable/ic_outline_edit</item>
        <item name="android:background">@drawable/round_button_bg</item>
    </style>

    <style name="MyProfileDataLabel.Width0">
        <item name="android:layout_width">0dp</item>
    </style>

    <style name="MyProfileData.Width0">
        <item name="android:layout_width">0dp</item>
    </style>

    <style name="MyDashboardWalletActionButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/steel_blue_500</item>
        <item name="android:background">@drawable/yellow_round_button_bg</item>
        <item name="android:layout_marginTop">@dimen/medium_margin</item>
        <item name="backgroundTint">@null</item>
    </style>


    <style name="MyDashboardNotificationButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/medium_text</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:visibility">gone</item>
        <item name="android:background">@drawable/yellow_round_button_bg</item>
        <item name="android:layout_marginTop">@dimen/medium_margin</item>
        <item name="android:drawableLeft">@drawable/ic_outline_notifications</item>
        <item name="backgroundTint">@null</item>
    </style>


</resources>






